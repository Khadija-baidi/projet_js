fibbonaci  seq 

const fibbonaci = (number) => {

  let seq = [0, 1]

  for (let i = 1; i < number; i++) {

    seq.push(seq[i] + seq[i - 1])

  }
  console.log(seq);

}


const fibseq = (n) => {
  let a = 0
  let b = 1

  for (let index = 0; index <= n; index++) {
    console.log(a);
    
    let nextResult = a + b
    a = b
    b = nextResult
    
  }

}


fibseq(8)
